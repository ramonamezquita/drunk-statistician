---
interface Props {
    text: string;
    href: string;
    isFilled?: boolean;
    borderVisible?: boolean;
    classes?: string;
}

const {
    text,
    href,
    isFilled = true,
    borderVisible = false,
    classes,
    ...rest
} = Astro.props as Props;
---

<a
    href={href}
    class:list={[
        "link",
        classes,
        { filled: isFilled, bordered: borderVisible },
    ]}
    {...rest}
>
    <span>{text}</span>
</a>
